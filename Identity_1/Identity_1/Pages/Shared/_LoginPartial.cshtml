@using Identity_1.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<div class="header__top__links" style="display: flex; align-items: center;">
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="display: flex; align-items: center; margin-right: 10px;">
            @if (UserManager.GetUserAsync(User).Result?.ProfileImage != null)
            {
                <img width="20px" height="20px" style="border-radius: 50%; margin-right: 5px;" src="data:image/*;base64,@Convert.ToBase64String(UserManager.GetUserAsync(User).Result.ProfileImage)" />
            }
            Merhaba @User.Identity?.Name!
        </a>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" style="margin-right: 10px;">
            <button type="submit" class="nav-link btn btn-link text-white">Çıkış yap</button>
        </form>
    }
    else
    {
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login" style="margin-right: 10px;">Giriş</a>
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Kayıt ol</a>
    }
</div>



