@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data">

<div class="row">
    <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
				<label asp-for="Username" class="form-label">email</label>
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                
            </div>

            <div class="form-floating mb-3">
				<label asp-for="Input.FirstName">Kullanıcı Adı</label>
                <input asp-for="Input.FirstName" class="form-control"  />
                
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
				<label asp-for="Input.LasttName">Kullanıcı Soyadı</label>
                <input asp-for="Input.LasttName" class="form-control"  />
                
                <span asp-validation-for="Input.LasttName" class="text-danger"></span>
            </div>

         

            <div class="form-floating mb-3">
				<label asp-for="Input.PhoneNumber" class="form-label">Numara</label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

          

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Kaydet</button>

            
    </div>
        <div class="col-md-6">
            <div class="form-group">
                @* <input asp-for="Input.Resim" class="form-control"  /> *@

              @*   <label >Resim </label> *@

                @if (Model.Input.Resim != null)
                {
                    <img id="MyImage" width="100px" height="100px" alt="" src=" data:image/*;base64,@Convert.ToBase64String(Model.Input.Resim) " />
                }
                else
                {
                    <img id="MyImage" width="100px" height="100px" alt="" src="~/image/testimonials-5.jpg" />

                }

                <div class="custom-file mt-2" style="color:darkgray;">
                    @* ///// accept="image/*" tum resimler kabul etmek icin png jpg .... *@
                    <input type="file" accept="image/*"
                    asp-for="Input.Resim" 
                    class="custom-file-input"
                    onchange="document.getElementById('MyImage').src=window.URL.createObjectURL(this.files[0])" />
                    @* <label class="custom-file-label" asp-for="Input.Resim">check image..</label> *@
                    <span asp-validation-for="Input.Resim" class="text-danger"></span>

                </div>

            </div>
        </div>
</div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
